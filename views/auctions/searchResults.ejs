<%- layout('layout/boilerplate') %>
    <h1>All Active Auctions</h1>


    <!-- Displaying categories -->
    <div class="my-3">
        <div class="row">
            <div class="btn-group col-3">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown"
                    data-bs-display="static" aria-expanded="false">
                    Look up by Category
                </button>
                
                <ul class="dropdown-menu dropdown-menu-lg">
                    <li><a class="dropdown-item" type="button" href="/active-auctions?category=collectible">Collectibles</a></li>
                    <li><a class="dropdown-item" type="button" href="/active-auctions?category=antique">Antiques</a></li>
                    <li><a class="dropdown-item" type="button" href="/active-auctions?category=painting">Paintings</a></li>
                    <li><a class="dropdown-item" type="button" href="/active-auctions?category=sculpture">Sculptures</a></li>
                </ul>
            </div>
        </div>
    </div>


    <!-- displaying all products -->
    <% for(let foundProduct of foundProducts) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= foundProducts.image %>" class="img-fluid img-thumbnail px-1 py-1" alt="Image src not found">
                </div>
                <div class="col-md-8">
                    <h4 class="card-title display-3">
                        <b><%= foundProducts.title %></b>
                    </h4>
                    <p class="card-text">
                        <%= foundProducts.description %>
                    </p>
                    <p class="card-text">
                        Current Price: â‚¹<%= foundProducts.price %>
                    </p>
                    <p class="card-text">
                        Time Left: <div class="d-inline" id="demo"></div>
                    </p>

                    <p class="card-text">
                        <small class="text-muted align-right">
                            <%= foundProducts.location %>
                        </small>
                    </p>
                    <a class="btn btn-success m-3" href="/active-auctions/<%= foundProducts._id %> ">View product</a>
                </div>
            </div>
        </div>
        <% } %>